{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,

  // <-- put it here (global behavior)
  "separateMajorMinor": true,

  "helmv3": {
    "enabled": true,
    "managerFilePatterns": [
      "^kubernetes\\/umbrella-charts\\/[^\\/]+\\/Chart\\.ya?ml$"
    ]
  },

  "argocd": {
    "enabled": true,
    "managerFilePatterns": [
      "^kubernetes\\/cluster-[^\\/]+-apps\\/.*\\.ya?ml$",
      "^kubernetes\\/system-apps\\/.*\\.ya?ml$",
      "^kubernetes\\/bootstrap\\/.*\\.ya?ml$"
    ]
  },

  "kubernetes": {
    "enabled": true,
    "managerFilePatterns": [
      "^kubernetes\\/.*\\.ya?ml$"
    ]
  },

  "helm-values": {
    "enabled": true,
    "managerFilePatterns": [
      "^kubernetes\\/overrides\\/.*\\/values\\.ya?ml$",
      "^kubernetes\\/umbrella-charts\\/[^\\/]+\\/values\\.ya?ml$"
    ]
  },

  "terraform": {
    "enabled": true,
    "managerFilePatterns": [
      "^terraform\\/modules\\/.*\\.tf$",
      "^terraform\\/environments\\/.*\\.tf$"
    ]
  },

  "packageRules": [
    {
      "matchManagers": ["argocd"],
      "groupName": "argocd helm chart updates"
    },
    {
      "matchManagers": ["helmv3"],
      "groupName": "umbrella chart dependency updates"
    }
  ]
}
